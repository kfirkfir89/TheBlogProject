@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Services
@using TheBlogProject.Enums
@using Newtonsoft.Json

@model TheBlogProject.Models.Post

@inject UserManager<BlogUser> userManager
@inject IImageService imageService

@{
    ViewData["Title"] = "Details";
}

<!-- Post Content-->
<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</article>

<form asp-controller="Comments" asp-action="Create">
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<hr />

<article>
    <div class="row">
        <div class="col text-center h3 fw-bold h3">
            Custom Posts Tags
        </div>
        <div class="row">
            <div class="col text-center">
                @foreach (var tag in Model.Tags)
                {
                    <a class="btn btn-warning btn-sm btn-outline-dark" asp-action="TagIndex" asp-route-tag="@tag.Text.ToLower()">#@tag.Text</a>
                }
            </div>
        </div>
    </div>
</article>

<hr />

<div class="row justify-content-center">
    <div class="col-8">
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="Create" asp-controller="Comments" method="post">
                @Html.Hidden("PostId", Model.Id)

                <div class="form-group">
                    <label class="h2 form-label fw-bold">Add Comment</label>
                    <textarea name="body" class="form-control" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-dark note-btn-block btn-sm mt-2">Submit</button>
            </form>
        }
        else
        {
            <a class="btn note-btn-block btn-sm btn-dark mt-2" asp-area="Identity" asp-page="/Account/Login">
                Login to add comments
            </a>
        }
    </div>
</div>

<hr />

<span id="commentSection" class="btn btn-sm btn-dark note-btn-block">@Model.Comments.Count COMMENT(S)</span>

@{ var counter = 0; }
@foreach (var comment in Model.Comments)
{
    <div class="row d-flex justify-content-center p-0 m-2">
        <div class="col-8 d-flex bg-light">
            <div class="flex-shrink-0 p-0 mb-2">
                <img class="mr-3 mt-3 rounded-circle" style="width:100px;" src="@imageService.DecodeImage(comment.BlogUser.ImageData, comment.BlogUser.ContentType)" />
            </div>
            <div class="flex-grow-1 ms-3">
                <h4>@comment.BlogUser.FirstName</h4>
                <small>
                    <i>
                        @if (comment.Moderated != null)
                        {
                        <span class="small">
                            <span class="fw-bold">
                                Moderated <span class="text-danger fst-italic">(@comment.ModerationType.ToString().ToLower())</span>
                            </span>
                            : @comment.Moderated?.ToString("MMM dd, yyyy")
                        </span>
                        }
                        else
                        {
                            <span class="small fst-italic">Posted : @comment.Created.ToString("MMM dd, yyyy")</span>
                        }
                    </i>
                </small>
                <p>@comment.Body</p>
            </div>

            <!--   section 1 : render the edit button   -->
            @if (comment.Moderated is null && comment.Deleted is null && comment.BlogUserId == userManager.GetUserId(User))
            {
                <hr />
                <button type="button" data-bs-toggle="modal" data-bs-target="#editModal" class="btn-sm btn-dark float-end fw-bold">EDIT</button>
            }

            <!--   section 2 : render the moderate and delete buttons   -->
            @if (User.IsInRole(BlogRole.Moderator.ToString()) && comment.Deleted is null)
            {
                <hr />
                <div class="row">
                    <div class="col">
                        <button type="button" data-bs-toggle="modal" data-bs-target="@($"#moderateModal{counter}")" class="btn-sm btn-dark fw-bold note-btn-block">MODERATE</button>
                    </div>
                    <div class="col">
                        <form asp-action="Delete" asp-controller="Comments">
                            @Html.Hidden("Id", comment.Id)
                            @Html.Hidden("Slug", comment.Post.Slug)
                            <button type="button" class="btn-sm btn-dark fw-bold note-btn-block">DELETE</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

    @*Modals*@
    <div class="modal" id="editModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!--  Modal header  -->
                <div class="modal-header">
                    <h4 class="modal-title">Editing Comment...</h4>
                </div>

                <!--  Modal body  -->
                <div class="modal-body">
                    <form asp-action="Edit" asp-controller="Comments">
                        @Html.Hidden("Id", comment.Id)

                        <div class="form-group">
                            <textarea name="Body" class="form-control" required>@comment.Body</textarea>
                        </div>

                        <button type="submit" class="btn-sm btn-dark border-success fw-bold">SUBMIT</button>
                    </form>
                </div>

                <!--  Modal footer  -->
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn-dark fw-bold" data-bs-dismiss="modal">CLOSE</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="@($"moderateModal{counter}")">
        <div class="modal-dialog">
            <div class="modal-content">

                <!--  Modal header  -->
                <div class="modal-header">
                    <h4 class="modal-title">Moderating Comment...</h4>
                </div>

                <!--  Modal body  -->
                <div class="modal-body">
                    <form asp-action="Moderate" asp-controller="Comments">
                        @Html.Hidden("Id", comment.Id)
                        @Html.Hidden("Body", comment.Body)

                        <div class="form-group">
                            <label class="form-label">Original Comment</label>
                            <textarea disabled class="form-control" style="resize:none">@comment.Body</textarea>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Moderated Comment</label>
                            <textarea required name="ModeratedBody" class="form-control">@comment.ModeratedBody</textarea>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Reason For Moderation</label>
                            <select name="ModerationType" asp-for="@comment.ModerationType" asp-items="Html.GetEnumSelectList<ModerationType>()" class="form-control">@comment.ModeratedBody</select>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn-sm btn-dark border-success fw-bold">SUBMIT</button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn-sm btn-dark fw-bold" data-bs-dismiss="modal">CLOSE</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

    counter++;
}
