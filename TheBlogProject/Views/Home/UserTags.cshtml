
@{
    ViewData["Title"] = "UserTags";
}

<h1>UserTags</h1>


<form class="form-group" asp-controller="Home" asp-action="UserTags">
    <div class="row">
        <label class="control-label">Manage Tags</label>
    </div>
    <div class="row row-cols-1">
        <div class="col">
            <div class="row">
                <div class="col">
                    <button onclick="AddMyTag()" type="button" class="btn btn-success note-btn-block" name="Add">ADD</button>
                </div>
                <div class="col">
                    <button onclick="DeleteTag()" type="button" class="btn btn-danger note-btn-block" name="Delete">DELETE</button>
                </div>
            </div>
        </div>
        <div class="col-6">
            <span>My Tags</span>
            <select class="note-btn-block" asp-items="@((List<SelectListItem>)ViewData["TagValues"])" name="TagValues" id="TagList" multiple></select>
        </div>
        <div class="col-6">
            <span>Tags</span>
            <select class="note-btn-block" asp-items="@((List<SelectListItem>)ViewData["DatabaseTagValues"])" name="DatabaseTagValues" id="DatabaseTagValues" multiple></select>
        </div>
    </div>
    <button type="submit">submit</button>
</form>

@section Scripts {

    <script>

        let tagValues = '@ViewData["TagValues"]';

        //Default font size but not for placeholder...
        $('#Content').summernote({
            placeholder: "Content"
        });
    </script>

    <script src="~/js/Custom.js"></script>

    <script>
        document.getElementById("DatabaseTagValues");
    </script>
}
