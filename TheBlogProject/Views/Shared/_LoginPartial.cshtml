@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Services
@using TheBlogProject.ViewModels

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
@inject IImageService _imageService


<div class="row">
    @if (SignInManager.IsSignedIn(User))
    {
        BlogUser blogUser = (BlogUser)await UserManager.GetUserAsync(User);

        <div class="col">
            <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-primary logoutButton border-1 px-4">LOGOUT</button>
            </form>
        </div>
    }
    else
    {
        <div class="col">
            <form>
                <button class="btn-sm btn-outline-secondary shadow-sm border-1 px-4" type="submit" asp-area="Identity" asp-page="/Account/Login">LOGIN</button>
            </form>
        </div>
    }
</div>
