@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Services
@using TheBlogProject.Models
@using TheBlogProject.Data
@using TheBlogProject.Enums

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
@inject IImageService _imageService
@inject ApplicationDbContext _context



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - The Blog Project</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Reference Summernote-->
    <link href="~/css/summernote-lite.min.css" rel="stylesheet" />


    <!-- TinyMCE editor  -->
    <script src="https://cdn.tiny.cloud/1/otpy1ckx769xk96nda6pp2k5q9tt9ww5gc5b9vqk5vt8my3p/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <!-- Font Awesome icons (free version)-->
    <script src="https://kit.fontawesome.com/91c94b274c.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/js/all.min.js"></script>

    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />


    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />

</head>
<body class="d-flex flex-column h-100">
    <!-- Navigation-->

    @{ var imagePath = @ViewData["HeaderImage"];
        if (imagePath == null)
        {
            imagePath = "'/assets/img/home-bg.jpg'";
        }
    }

    <!-- Page Header-->
    <header>
        <!-- NAV-->
        <nav class="navbar navbar-expand-md mb-3 navStyle shadow-sm bg-example border-secondary border-bottom border-1">
            <div class="container-fluid d-flex justify-content-center">
                <div class="container-xxl row p-0 m-0">
                    <div class="col-md-4 d-flex d-inline-block pt-md-0">
                        <form class="d-flex d-none d-md-block shadow-sm" style="height:40px;" asp-action="SearchIndex" asp-controller="Posts">
                            <div class="input-group d-flex flex-nowrap">
                                <div class="form-floating d-flex flex-nowrap">
                                    <input type="text" id="floatingInputSearch" class="ps-3 form-control rounded bg-white rounded-start rounded-0" name="SearchTerm" placeholder="Search Term" autocomplete="off" aria-label="Search" />
                                    <label class="form-label form-labelSearch p-1" for="floatingInputSearch">search</label>
                                    <button type="submit" class="btn btn-primary px-4 rounded-end rounded-0" style="height:40px"><i class="fa fa-search fa-lg"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4 col-6 d-flex justify-content-md-center">
                        <a class="p-0 m-0 ps-md-5 ms-md-4" asp-controller="Home" asp-action="Index">
                            <i class="">
                                <img class="logoImg" src="~/assets/img/navIcons/logoBig.svg" />
                            </i>
                        </a>
                    </div>
                    <div class="col-md-4 col-6 d-flex d-inline-block justify-content-end align-items-center">

                            <partial name="_LogoutPartial" />
                            <button class="navbar-toggler ms-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                                <span class="navbar-toggler-icon"></span>
                            </button>
@*                        <div class="btn-group d-flex justify-content-end">
                            <button class="btn btn-primary logoutButton">
                                <a class="" asp-controller="Home" asp-action="About" title="Manage">
                                    <i class="fa-solid fa-circle-exclamation fa-xl align-self-center pe-1"></i>
                                </a>
                            </button>
                            <button class="btn btn-primary">
                                <a class="" asp-controller="Home" asp-action="Contact" title="Manage">
                                    <i class="fa-regular fa-id-card fa-xl align-self-center"></i>
                                </a>
                            </button>
                            <div class="d-flex justify-content-end d-none d-md-block shadow-sm">
                                <partial name="_LoginPartial" />
                            </div>
                            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>*@
                    </div>
                </div>
            </div>
        </nav>

        <!--CANVAS NAV-->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Active</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Main Content-->
    <main class="d-flex flex-column h-100 mt-2">
        <div class="container-xxl">
            <div class="row row-cols-1">

                @{ var user = await UserManager.GetUserAsync(User); }

                <!--SIDEBAR NAV-->
                <div class="col-3 text-center d-none d-md-block">
                    <div class="row-cols-1 h-100">
                        <div class="col">
                            <div class="btn-group-vertical d-flex flex-nowrap">

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    BlogUser blogUser = (BlogUser)await UserManager.GetUserAsync(User);


                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                        <img class="rounded-circle img-thumbnail" style="width:30px; height:30px;" src="@_imageService.DecodeImage(blogUser.ImageData, blogUser.ContentType)" />
                                        <span class=" align-self-center ps-1">@blogUser.FullName</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Comments" asp-action="Index" title="User Likes">
                                        <i class="fa-solid fa-thumbs-up fa-xl align-self-center likeIconSideBar ps-2"></i>
                                        <span class="align-self-center ps-2">Likes</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Comments" asp-action="Index" title="User Useful Codes">
                                        <i class="fa-solid fa-file-code fa-xl align-self-center usefulIconSideBar ps-1  ms-1"></i>
                                        <span class="align-self-center ps-2 ms-1">Useful Codes</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Comments" asp-action="Index" title="User Comments">
                                        <i class="fa-regular fa-comment fa-xl align-self-center commentsIconSideBar ps-2"></i>
                                        <span class="align-self-center ps-2">Comments</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Home" asp-action="UserTags" title="User Tags">
                                        <i class="fa-solid fa-tag fa-xl align-self-center tagsIconSideBar ps-2 ms-1"></i>
                                        <span class=" align-self-center ps-2">Tags</span>
                                    </a>

                                }
                                else
                                {
                                    <partial name="_LoginPartial" />


                                }

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Home" asp-action="About" title="About">
                                        <i class="fa-solid fa-circle-exclamation fa-xl align-self-center tagsIconSideBar ps-1  ms-1"></i>
                                        <span class=" align-self-center ps-2">About</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn" asp-controller="Home" asp-action="Contact" title="Contact">
                                        <i class="fa-regular fa-id-card fa-lg align-self-center tagsIconSideBar ps-1 ms-1"></i>
                                        <span class=" align-self-center ps-2">Contact</span>
                                    </a>

                                @if (User.IsInRole(BlogRole.Moderator.ToString()) || User.IsInRole(BlogRole.Administrator.ToString()))
                                {
                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn border-1 border-top mt-2" asp-controller="Comments" asp-action="Index" title="Comments Controler">
                                        <i class="fa-regular fa-comments fa-xl align-self-center commentsManIconSideBar ps-1"></i>
                                        <span class="ms-1 align-self-center ps-1">Comments Management</span>
                                    </a>

                                    <a class="btn btn-primary d-inline-flex flex-nowrap sideBarBtn " asp-controller="Home" asp-action="TagManagement" title="Tag Management">
                                        <i class="fa-solid fa-tags fa-xl align-self-center tagsManIconSideBar ps-2"></i>
                                        <span class="ms-1 align-self-center ps-1">Tags Management</span>
                                    </a>
                                }

                            </div>

                        </div>
                        <div class="col mt-4">

                            <div class="h6 border-top border-bottom border-1 py-2">My Tags</div>

                            <div class="btn-group-vertical note-btn-block">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    if (user.MyTags != null)
                                    {
                                        <div class=""></div>
                                        foreach (var tag in user.MyTags)
                                        {
                                            foreach (var tagText in _context.Tags.Select(t => t.Text).ToList())
                                            {
                                                if (tag == tagText)
                                                {
                                                    <a class="container-fluid d-flex flex-nowrap tagViewA sideBarBtn py-1" asp-controller="Posts" asp-action="TagIndex" asp-route-tag="@tag">
                                                        <i class="align-self-center likeIconSideBar">#</i>
                                                        <span class="align-self-center">@tag</span>
                                                    </a>
                                                    break;
                                                }
                                            }
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>

                </div>

                <!--CONTENT-->
                <div class="col-md-9 col-lg-7 d-flex flex-column h-100">
                    <div class="row btn-group d-flex flex-nowrap">
                        <button class="btn btn-primary leftButtonMenu" id="leftButtonMenu">
                            <a class="d-flex flex-nowrap container-fluid justify-content-center leftButtonMenu" asp-controller="Home" asp-action="Index" title="Relevant">
                                <h6 class="pt-2">latest</h6>
                            </a>
                        </button>
                        <button class="btn btn-primary middleButtonMenu" id="middleButtonMenu">
                            <a class="d-flex flex-nowrap justify-content-center ps-1 container-fluid middleButtonMenu" asp-controller="Home" asp-action="Index" title="Home Page">
                                <i class="fa-solid fa-house-user fa-xl align-self-center" style="color: var(--hoverLightBlue-color); "></i>
                            </a>
                        </button>
                        <button class="btn btn-primary rightButtonMenu" id="rightButtonMenu">
                            <a class="d-flex flex-nowrapcontainer-fluid justify-content-center rightButtonMenu" asp-controller="Home" asp-action="About" title="Top View">
                                <h6 class="pt-2">TOP VIEW</h6>
                            </a>
                        </button>
                    </div>

                    @RenderBody()
                </div>

                <!--TAGS LEFT SIDEBAR-->
                <div class="col-2 d-none d-lg-block">
                    <div class="row-cols-1 d-flex flex-column h-100">

                            @if (SignInManager.IsSignedIn(User))
                            {
                                if (user.MyTags != null)
                                {
                                    Post selectedPost = new Post();
                                    int postCounter = 0;
                                    int counter = 0;
                                    foreach (var userTag in user.MyTags)
                                    {
                                        foreach (var post in _context.Posts.Where(p => p.Tags.Count() > 0))
                                        {
                                            var postTags = post.Tags.Select(t => t.Text);
                                            if (counter >= 2)
                                            {
                                                selectedPost = post;
                                                counter = 0;
                                                postCounter++;

                                                <div class="row-cols-1">
                                                    <div class="col d-flex d-inline-block">
                                                        <h5 class="">@selectedPost.Title</h5>
                                                        <p class="">@selectedPost.Abstract</p>
                                                        <a asp-action="Details" asp-controller="Posts" asp-route-slug="@selectedPost.Slug" class="btn btn-primary" style="height:20px;">Read More</a>
                                                    </div>
                                                </div>

                                                break;
                                            }
                                            foreach (var item in postTags)
                                            {
                                                if (item == userTag)
                                                {
                                                    counter++;
                                                }
                                                if (counter >= 2)
                                                {
                                                    selectedPost = post;
                                                    counter = 0;
                                                    postCounter++;
                                                    <div class="col my-1">
                                                        <div class="card cardPostSM rounded rounded-2 shadow-sm">
                                                            <div class="card-title d-flex flex-wrap h6 p-1 pb-0 m-0">@selectedPost.Title</div>
                                                            <p class="card-text px-1 m-0 d-flex flex-wrap">@selectedPost.Abstract</p>
                                                            <a class="btn btn-primary d-flex flex-nowrap justify-content-center tagViewA sideBarBtn readBtn" asp-action="Details" asp-controller="Posts" asp-route-slug="@selectedPost.Slug">
                                                                <span class="align-self-center likeIconSideBar">Read</span>
                                                            </a>
                                                        </div>
                                                    </div>

                                                    break;
                                                }
                                            }
                                        }
                                        if (postCounter == 3)
                                        {
                                            break;
                                        }
                                    }
                                }

                            }

                        <div class="col">
                           
                            <div class="btn-group-vertical note-btn-block">

                                @foreach (var tag in _context.Tags.Select(t => t.Text))
                                {
                                    <a class="container-fluid d-flex flex-nowrap tagViewA sideBarBtn py-1" asp-controller="Posts" asp-action="TagIndex" asp-route-tag="@tag">
                                        <i class="align-self-center likeIconSideBar">#</i>
                                        <span class="align-self-center">@tag</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>



