@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Services
@using TheBlogProject.Models
@using TheBlogProject.Data
@using TheBlogProject.Enums

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
@inject IImageService _imageService
@inject ApplicationDbContext _context



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - The Blog Project</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Reference Summernote-->
    <link href="~/css/summernote-lite.min.css" rel="stylesheet" />


    <!-- TinyMCE editor  -->
    <script src="https://cdn.tiny.cloud/1/otpy1ckx769xk96nda6pp2k5q9tt9ww5gc5b9vqk5vt8my3p/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <!-- Font Awesome icons (free version)-->
    <script src="https://kit.fontawesome.com/91c94b274c.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/js/all.min.js"></script>

    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />


    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />

</head>
<body class="d-flex flex-column h-100">
    <!-- Navigation-->

    @{ var imagePath = @ViewData["HeaderImage"];
        if (imagePath == null)
        {
            imagePath = "'/assets/img/home-bg.jpg'";
        }
    }

    <!-- Page Header-->
    <header>
        <!-- NAV-->
        <nav class="navbar navbar-expand-md navbar-light bg-white mb-3 navStyle">
            <div class="container-fluid d-flex justify-content-center">
                <div class="container-xxl row p-0 m-0">
                    <div class="col-6 d-flex d-inline-block pt-md-0">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <i class="">
                                <img class="logoImg" src="~/assets/img/navIcons/logoBig.svg" />
                            </i>
                        </a>
                        <form class="d-flex d-none d-md-block" asp-action="SearchIndex" asp-controller="Posts">
                            <div class="input-group d-flex flex-nowrap">
                                <div class="form-floating d-flex flex-nowrap">
                                    <input type="text" id="floatingInputSearch" class="ps-3 form-control rounded bg-white rounded-start rounded-0" name="SearchTerm" placeholder="Search Term" autocomplete="off" aria-label="Search" />
                                    <label class="form-label form-labelSearch p-1" for="floatingInputSearch">search</label>
                                    <button type="submit" class="btn btn-primary btnSearch px-4 rounded-end rounded-0" style="height:40px"><i class="fa fa-search fa-lg"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-6">
                        <div class="col d-flex justify-content-end">
                            <div class="d-flex justify-content-end d-none d-md-block pe-4">
                                <partial name="_LoginPartial" />
                            </div>
                            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!--CANVAS NAV-->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Active</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Main Content-->
    <main class="d-flex flex-column h-100 mt-2">
        <div class="container-xxl">
            <div class="row row-cols-1">

                <!--SIDEBAR NAV-->
                <div class="col-3 text-center d-none d-md-block">
                    <div class="row-cols-1 h-100">
                        <div class="col">
                            <div class="btn-group-vertical d-flex flex-nowrap">

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    BlogUser user = (BlogUser)await UserManager.GetUserAsync(User);
                                    var len = user.FirstName.Length;

                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Home" asp-action="Index" title="Manage">
                                            <span class="fa-layers fa-fw">
                                                <i class="fa-solid fa-house-user fa-xl align-self-center pb-1"></i>
                                                <span class="fa-layers-counter fa-2x" style="top: 0; left:-15px;">@len</span>
                                            </span>
                                            <span class="ms-1 align-self-center ps-3 pt-1">Home</span>
                                        </a>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Home" asp-action="Index" title="Manage">
                                            <span class="fa-layers fa-fw">
                                                <i class="fa-solid fa-house-user fa-xl align-self-center pb-1"></i>
                                            </span>
                                            <span class="ms-1 align-self-center ps-3">Home</span>
                                        </a>
                                    </button>
                                }
                                <button class="btn btn-primary nav-link d-inline-flex">
                                    <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Home" asp-action="About" title="Manage">
                                        <i class="fa-solid fa-circle-exclamation fa-xl align-self-center pe-1"></i>
                                        <span class="ms-1 align-self-center ps-2">About</span>
                                    </a>
                                </button>
                                <button class="btn btn-primary nav-link d-inline-flex">
                                    <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Home" asp-action="Contact" title="Manage">
                                        <i class="fa-regular fa-id-card fa-xl align-self-center"></i>
                                        <span class="ms-1 align-self-center ps-2">Contact</span>
                                    </a>
                                </button>

                                <hr />

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    BlogUser blogUser = (BlogUser)await UserManager.GetUserAsync(User);

                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-0 container-fluid" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                            <img class="rounded-circle img-thumbnail" style="width:30px; height:30px;" src="@_imageService.DecodeImage(blogUser.ImageData, blogUser.ContentType)" />
                                            <span class="ms-1 align-self-center ps-2">@blogUser.FullName</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                            <i class="fa-solid fa-heart fa-xl align-self-center "></i>
                                            <span class="ms-1 align-self-center ps-3">Favorite</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Comments" asp-action="Index" title="Manage">
                                            <i class="fa-solid fa-comment fa-xl align-self-center"></i>
                                            <span class="ms-1 align-self-center ps-3">My Comments</span>
                                        </a>
                                    </button>
                                }


                                @if (User.IsInRole(BlogRole.Moderator.ToString()) || User.IsInRole(BlogRole.Administrator.ToString()))
                                {
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1 container-fluid" asp-controller="Comments" asp-action="Index" title="Manage">
                                            <i class="fa-solid fa-comments fa-xl align-self-center"></i>
                                            <span class="ms-1 align-self-center ps-2">Comments Control</span>
                                        </a>
                                    </button>
                                }


                            </div>

                        </div>
                        <div class="col border border-1 border-secondary rounded-2 " style="height:300px">
                            <span>themes</span>
                        </div>
                    </div>

                </div>

                <!--CONTENT-->
                <div class="col-md-9 col-lg-7">
                    <div class="row-cols-1 d-flex flex-column h-100">

                        <!--MENU BUTTONS (SUBJECTS, ALL POSTS)-->
                        <div class="col">
                            <div class="btn-group d-flex flex-nowrap">
                                <button class="btn btn-primary leftButtonMenu">
                                    <a class="nav-link d-flex flex-nowrap ps-1 container-fluid justify-content-center" asp-controller="Home" asp-action="Index" title="Manage">
                                        <h6 class="ms-1 align-self-center">SUBJECTS</h6>
                                    </a>
                                </button>
                                <button class="btn btn-primary rightButtonMenu">
                                    <a class="nav-link d-flex flex-nowrap ps-1 container-fluid justify-content-center" asp-controller="Home" asp-action="About" title="Manage">
                                        <h6 class="ms-1 align-self-center">ALL POSTS</h6>
                                    </a>
                                </button>
                            </div>
                        </div>

                        <div class="col">
                            @RenderBody()
                        </div>

                    </div>
                </div>

                <!--TAGS LEFT SIDEBAR-->
                <div class="col-2 d-none d-lg-block">
                    <div class="row-cols-1 d-flex flex-column h-100">
                        <div class="col border border-1 border-secondary rounded-2 " style="height:300px">
                            <span>top view</span>
                        </div>
                        <div class="col">
                            <div class="btn-group-vertical d-flex flex-nowrap">

                                @foreach (var tag in _context.Tags.Select(t => t.Text))
                                {
                                    <div class="btn-group">
                                        <div class="flex-grow-1">
                                            <button class="btn btn-primary d-inline-flex tagViewBtn">
                                                <a asp-controller="Posts" asp-action="TagIndex" asp-route-tag="@tag" class="container-fluid d-flex flex-nowrap tagViewA" style="width:100%;">#@tag</a>
                                            </button>
                                        </div>
                                        <div class="justify-content-end">
                                            <button class="btn btn-primary d-inline-flex flex-nowrap tagViewBtn justify-content-center" style="width:20px;">
                                                <a asp-controller="Posts" asp-action="TagIndex" asp-route-tag="@tag" class="">+</a>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>



    @*    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <img class="mr-3 mt-3 rounded-pill img-thumbnail " style="width:60px;" src="@_imageService.DecodeImage(blogUser.ImageData, blogUser.ContentType)" />
                <span class="" style="font-size: .5rem">@blogUser.FirstName</span>
            </a>
        </li>
                                    <a><img class="card-img-top" style="background-image: url(@imagePath)"></a>*@

    <!-- Footer-->
    <footer class="footer mt-auto py-2">
        <div class="container-fluid bg-gradient">
            <div class="row row-cols-1 row-cols-lg-3 gy-2">
                <div class="col text-light d-flex align-items-center order-last order-lg-first">
                    <div class="smallfont"><span>&copy;2022</span>  Kfir Avraham | Kfirkfir89@gmail.com</div>
                </div>
                <div class="col d-flex align-items-center justify-content-center">
                    <img src="/img/White logo - no background.svg" alt="Kfir Avraham Logo" height="43">
                </div>
                <div class="col d-flex align-items-center justify-content-start justify-content-lg-end">
                    <div class="row p-1">
                        <div class="col social"><a href="https://www.linkedin.com/in/kfir-avraham-91637b123/" target="__blank"><i class="fab fa-linkedin fa-2x"></i></a></div>
                        <div class="col social"><a href="https://github.com/kfirkfir89" target="__blank"><i class="fab fa-github fa-2x"></i></a></div>
                        <div class="col social"><a href="https://twitter.com/kfir_avraham" target="__blank"><i class="fab fa-twitter fa-2x"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <!-- Jquery JS(needed for summernote)-->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <!-- Summernote JS-->
    <script src="~/js/summernote-lite.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>