@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Services
@using TheBlogProject.ViewModels

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
@inject IImageService _imageService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - The Blog Project</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Reference Summernote-->
    <link href="~/css/summernote-lite.min.css" rel="stylesheet" />

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>

    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />


    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
    <!-- Navigation-->


    @{ var imagePath = @ViewData["HeaderImage"];
        if (imagePath == null)
        {
            imagePath = "'/assets/img/home-bg.jpg'";
        }
    }

    <!-- Page Header-->
    <header>
        <!-- NAV-->
        <nav class="navbar navbar-expand-xl navbar-light bg-light border-bottom border-secondary shadow" style="background-image: url(@imagePath)">
            <div class="container-fluid d-flex justify-content-center">
                <div class="container-xxl row">
                    <div class="col-3 d-flex">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
                    </div>
                    <div class="col-6 d-flex justify-content-center">
                        <form class="d-flex" asp-action="SearchIndex" asp-controller="Posts">
                            <div class="input-group">
                                <div class="form-floating">
                                    <input type="text" id="floatingInput" class="form-control me-2" name="SearchTerm" placeholder="Search Term" autocomplete="off" aria-label="Search" />
                                    <label class="form-label p-1" for="floatingInput">search</label>
                                </div>
                                <button id="floatingInputButton" class="btn-sm btn-outline-secondary shadow-sm border-0 px-4 rounded-0 rounded-end" type="submit">
                                    <i class="">
                                        <img class="pe-2 pb-1 ms-2" style="width:30px; height:30px;" src="~/assets/img/navIcons/Search.svg" />
                                    </i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-3">
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <partial name="_LoginPartial" />
                            </div>
                            <div class="col">
                                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!--CANVAS NAV-->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div>
                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Active</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Main Content-->

    <main class="d-flex flex-column h-100 mt-2">
        <div class="container-xxl">
            <div class="row">

                <!--SIDEBAR NAV-->
                <div class="col-3 text-center shadow bg-secondary">
                    <div class="row-cols-1 h-100 bg-white">
                        <div class="col">
                            <ul class="navbar-nav">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    BlogUser blogUser = (BlogUser)await UserManager.GetUserAsync(User);
                                <div class="btn-group-vertical d-flex flex-nowrap">
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                            <img class="rounded-circle img-thumbnail" style="width:40px; height:40px;" src="@_imageService.DecodeImage(blogUser.ImageData, blogUser.ContentType)" />
                                            <span class="ms-1 align-self-center">@blogUser.FullName</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-area="Controllers" asp-page="/HomeController/Index" title="Manage">
                                            <i class="">
                                                <img class="pe-2 pb-1 ms-2" style="width:38px; height:38px;" src="~/assets/img/navIcons/HomeIcon2.svg" />
                                            </i>
                                            <span class="ms-1 align-self-center">Home</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                            <i class="">
                                                <img class="pe-2 pb-1 ms-2" style="width:38px; height:38px;" src="~/assets/img/navIcons/Favorite.svg" />
                                            </i>
                                            <span class="ms-1 align-self-center">Favorite</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                            <i class="">
                                                <img class="pe-2 pb-1 ms-2" style="width:38px; height:38px;" src="~/assets/img/navIcons/Comments.svg" />
                                            </i>
                                            <span class="ms-1 align-self-center">My Comments</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-controller="Home" asp-action="About" title="Manage">
                                            <i class="">
                                                <img class="pe-2 pb-1 ms-2" style="width:38px; height:38px;" src="~/assets/img/navIcons/About.svg" />
                                            </i>
                                            <span class="ms-1 align-self-center">About</span>
                                        </a>
                                    </button>
                                    <button class="btn btn-primary nav-link d-inline-flex">
                                        <a class="nav-link d-flex flex-nowrap ps-1" asp-controller="Home" asp-action="Contact" title="Manage">
                                            <i class="">
                                                <img class="pe-2 pb-1 ms-2" style="width:38px; height:38px;" src="~/assets/img/navIcons/Contact.svg" />
                                            </i>
                                            <span class="ms-1 align-self-center">Contact</span>
                                        </a>
                                    </button>
                                </div>
                                }
                            </ul>
                        </div>

                    </div>

                </div>

                <!--CONTENT-->
                <div class="col-7 bg-info shadow">
                    <div class="row-cols-1 d-flex flex-column h-100">
                        <div class="col">
                            @RenderBody()
                        </div>
                    </div>
                </div>

                <!--TAGS LEFT SIDEBAR-->
                <div class="col-2 text-center shadow bg-secondary">
                    <div class="row-cols-1 d-flex flex-column h-100 bg-white border border-dark border-1">
                        <div class="col">
                            TAGS
                        </div>
                        <div class="col"></div>
                    </div>
                </div>

            </div>
    </main>



@*    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <img class="mr-3 mt-3 rounded-pill img-thumbnail " style="width:60px;" src="@_imageService.DecodeImage(blogUser.ImageData, blogUser.ContentType)" />
            <span class="" style="font-size: .5rem">@blogUser.FirstName</span>
        </a>
    </li>*@






    <!-- Footer-->
    <footer class="footer mt-auto py-2">
        <div class="container-fluid bg-gradient">
            <div class="row row-cols-1 row-cols-lg-3 gy-2">
                <div class="col text-light d-flex align-items-center order-last order-lg-first">
                    <div class="smallfont"><span>&copy;2022</span>  Kfir Avraham | Kfirkfir89@gmail.com</div>
                </div>
                <div class="col d-flex align-items-center justify-content-center">
                    <img src="/img/White logo - no background.svg" alt="Kfir Avraham Logo" height="43">
                </div>
                <div class="col d-flex align-items-center justify-content-start justify-content-lg-end">
                    <div class="row p-1">
                        <div class="col social"><a href="https://www.linkedin.com/in/kfir-avraham-91637b123/" target="__blank"><i class="fab fa-linkedin fa-2x"></i></a></div>
                        <div class="col social"><a href="https://github.com/kfirkfir89" target="__blank"><i class="fab fa-github fa-2x"></i></a></div>
                        <div class="col social"><a href="https://twitter.com/kfir_avraham" target="__blank"><i class="fab fa-twitter fa-2x"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <!-- Jquery JS(needed for summernote)-->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <!-- Summernote JS-->
    <script src="~/js/summernote-lite.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>