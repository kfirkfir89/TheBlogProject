@model TheBlogProject.Models.Comment

@{
    Layout = "~/Views/Shared/_LayoutOneCol.cshtml";
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />

    <div class="col" style="padding:0px;">
        @*-------------   Post card   ------------*@
        <div class="card bg-transparent mb-3 shadow-sm rounded border-0" style="padding:0px;">
            <div class="card-body bg-white rounded-top" style="margin-top: 1px; padding: 5px;">

                <div class="row row-cols-1 px-1 pt-1">
                    <div class="col w-100 d-flex">
                        <a class="d-flex d-inline-block flex-nowrap " asp-action="Details" asp-controller="Posts" asp-route-slug="@Model.Post.Slug" asp-fragment="commentSection" style="color: var(--customBlack-color);">
                            <span class="h6 m-0">@Model.Post.Title</span>
                        </a>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <div class="d-flex d-inline-block">

                            <div class="d-flex flex-column flex-grow-1">
                                @if (Model.Updated is not null)
                                {
                                    <span class="smallFont text-muted fw-lighter fst-italic text-nowrap">Updated : @Model.Updated?.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="smallFont text-muted fw-lighter fst-italic text-nowrap">@Model.Created.ToString("MMM dd, yyyy")</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <span class="d-flex flex-wrap px-4 mx-1 m-0">@Model.Body</span>
                </div>

            </div>

            @*-------------   Post footer buttons   ------------*@
            <div class="card-footer border-0 bg-white rounded-bottom p-0" id="viewUpdate">
                    <div class="row px-sm-3 my-1 d-flex m-0">
                        <div class="col">
                            <form  asp-action="Delete">
                                <div class="btn-group d-flex flex-nowrap p-0 m-0 ms-auto">
                                    <button type="submit" class="likeBtn btn btn-primary d-flex flex-nowrap justify-content-center postBtns shadow-none" style="color: var(--customBlack-color);">
                                        <i class="fa-solid fa-pen-to-square fa-lg px-2"></i>
                                        <span class="pb-1 pe-2">Delete</span>
                                    </button>
                                    <div class="px-1 text-muted">|</div>
                                    <a class="likeBtn btn btn-primary d-flex flex-nowrap justify-content-center postBtns shadow-none" style="color: var(--customBlack-color);" asp-action="Index" asp-route-id="@Model.BlogUserId">
                                        <i class="fa-solid fa-circle-chevron-left fa-lg px-2"></i>
                                        <span class="pb-1 pe-2">Back To List</span>
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

</div>
