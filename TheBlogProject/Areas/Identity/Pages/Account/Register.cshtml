@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutOneCol.cshtml";
}

<div class="row bg-transparent rounded d-flex justify-content-center p-0 m-0">

    <form class="p-0" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="bg-white rounded p-3 mt-2 shadow-sm">
            <div class="h6 pt-2 ps-1">Register</div>

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="FirstName" autocomplete="firstname" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="LastName" autocomplete="lastname" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.DisplayName" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="DisplayName" autocomplete="displayname" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">Display Name</label>
                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="Email" autocomplete="email" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row-cols-1 py-2">
                <span class="text-muted ps-2 opacity-75">Upload Image</span>
                <div class="col">
                    <div class="input-group">
                        <label asp-for="Input.ImageFile" class="btn btn-primary note-btn-block shadow-none w-100 uploadButton btn-file p-2" for="multiple_input_group p-2" placeholder="ImageFile">
                            <input asp-for="Input.ImageFile" id="multiple_input_group" type="file">
                            <i class="fa-solid fa-upload fa-2xl"></i>
                            <span class="file-input-label"></span>
                            <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                        </label>
                    </div>
                </div>
            </div>

            <hr />

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="Password" autocomplete="password" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control ps-2 floaingCustom" style="padding-top: 25px;" id="floatingInputGrid" placeholder="ConfirmPassword" autocomplete="confirmpassword" aria-required="true">
                    <label class="form-labelFloating ps-2" for="floatingInputGrid">ConfirmPassword</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>


        </div>

        <hr />
        <button id="registerSubmit" type="submit" class="w-100 btn btn-primary logoutButton border-1 px-2 shadow-none">Register</button>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/uploadImage.js"></script>
}
