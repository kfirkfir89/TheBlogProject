@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.FacebookUrl" class="form-control"/>
                <label asp-for="Input.FacebookUrl" class="form-label"></label>
                <span asp-validation-for="Input.FacebookUrl" class="text-danger"></span>
                
                <a href="@Model.FacebookUrl"><i class="fa-brands fa-facebook"></i></a>
            </div>

            <div class="input-group custom-file-button">
                <input type="file" id="inputGroupFile" asp-for="Input.ImageFile" class="form-control" autocomplete="image" aria-required="true" accept=".png, .jpg, .bmp, .tif" />
                <label asp-for="Input.ImageFile" for="inputGroupFile" class="input-group-text">Browse</label>
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <img src="@Model.CurrentImage" class="img-fluid rounded-circle" width="50%"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
